<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane style="-fx-background-color: #212121;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.LoginController">
    <center>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="40" />
                <RowConstraints prefHeight="50" />
                <RowConstraints prefHeight="40" />
            </rowConstraints>

            <Label style="-fx-text-fill: #FFFFFF; -fx-font-size: 14pt;" text="Developer Scheduling" GridPane.rowIndex="0" />
            <TextField fx:id="userIDField" promptText="Enter your User ID" style="-fx-background-color: #424242; -fx-text-fill: #FFFFFF; -fx-font-size: 14pt; -fx-pref-height: 50px;" GridPane.rowIndex="1" />

            <Button onAction="#login" style="-fx-background-color: #4CAF50; -fx-text-fill: #FFFFFF; -fx-font-size: 14pt; -fx-pref-width: 150px; -fx-pref-height: 40px;" text="Log in" GridPane.rowIndex="2" />
        </GridPane>
    </center>
</BorderPane>
